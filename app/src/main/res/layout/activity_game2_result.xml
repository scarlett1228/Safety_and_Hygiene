<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.Game2ResultActivity"
    android:orientation="vertical"
    android:gravity="center">

    <!--https://pngtree.com/freepng/color-pixel-gameover-game-over-prompt-box_5525912.html -->

    <ImageView
        android:layout_width="268dp"
        android:layout_height="158dp"
        android:src="@drawable/gameover" />

    <TextView
        android:id="@+id/scoreLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:fontFamily="@font/reggae_one"
        android:textSize="40sp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/highScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Score: 0"
        android:textColor="@color/black"
        android:fontFamily="@font/reggae_one"
        android:textSize="20sp"
        android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/backgroupshape"
        android:fontFamily="@font/reggae_one"
        android:onClick="tryAgain"
        android:text="@string/game2_try_again"
        android:textColor="@color/black" />

    <Button
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroupshape"
        android:fontFamily="@font/reggae_one"
        android:onClick="backsecondpage"
        android:text="@string/game2_back"
        android:textColor="@color/black" />

</LinearLayout>