<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.Game2Activity"
    android:orientation="vertical">

    <!--https://pngtree.com/freepng/children-wearing-mask-corona-wearing-mask-protection-vector-png_5344544.html !-->
    <!--https://pngtree.com/freepng/disinfectant-hand-sanitizer-bottle-vector_5347573.html !-->
    <!--https://pngtree.com/freepng/medical-mask-surgical-mask-n95-mask-for-coronavirus_5337119.html !-->
    <!--https://pngtree.com/freepng/cute-virus-cartoon-illustration_5358272.html!-->
    <TextView
        android:id="@+id/scoreLable"
        android:layout_width="match_parent"
        android:fontFamily="@font/reggae_one"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/black"/>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/startlable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game2_tap_to_start"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/gamepeople"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_gamepeople"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/gamemask"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/maskpng"/>

        <ImageView
            android:id="@+id/gamevirus"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/viruspng"/>

        <ImageView
            android:id="@+id/gamesanitizer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sanitizerpng"/>

    </FrameLayout>

</LinearLayout>